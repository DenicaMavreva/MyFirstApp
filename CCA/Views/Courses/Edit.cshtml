@model CCA.ViewModels.Course.CourseInputViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<main class="mt-3 mb-5">
    <h1 class="text-center">Edit Product</h1>
    <hr class="hr-2 bg-dark" />
    <form class="mx-auto half-width" method="post" asp-controller="Products" asp-action="Edit">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" placeholder="Title..." value="@Model.Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Credits"></label>
            <input asp-for="Credits" class="form-control" placeholder="Credits..." value="@Model.Credits">
            <span asp-validation-for="Credits" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Description...">@Model.Description</textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <h4 class="text-center">Product Type</h4>
        <hr class="hr-2 bg-dark half-width mt-4" />
        
        <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
            <button type="submit" class="btn chushka-bg-color" asp-controller="Courses" asp-action="Edit">Edit</button>
            <button asp-controller="Home" asp-action="Index" type="submit" class="btn chushka-bg-color">Cancel</button>
        </div>
    </form>
</main>