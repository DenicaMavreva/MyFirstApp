@model CCA.ViewModels.Professors.LoggedInViewProfessor

@{
    ViewData["Title"] = "AllProfessorsUserView";
}
<main class="mt-3 mb-5">
    <h1 class="text-center">All Professors</h1>

    <hr class="hr-2 bg-dark" />
    <table class="table w-75 mx-auto table-hover">
        <thead>
            <tr class="row">
                <th class="col-md-1">#</th>
                <th class="col-md-4">Professor</th>
                <th class="col-md-2">Science Degree</th>
                <th class="col-md-2">Phone number</th>
                <th class="col-md-2">Email</th>
            </tr>
        </thead>
        <tbody>
            @for (int rowIndex = 0; rowIndex < Model.Professors.Count; rowIndex++)
            {
                var currentProfessor = Model.Professors.ToList()[rowIndex];
                <tr class="row">
                    <th class="col-md-1">@(rowIndex + 1)</th>
                    <td class="col-md-4">@currentProfessor.FullName</td>
                    <td class="col-md-2">@currentProfessor.ScienceDegree</td>
                    <td class="col-md-2">@currentProfessor.PhoneNumber</td>
                    <td class="col-md-2">@currentProfessor.Email</td>
                </tr>
            }
        </tbody>
    </table>
</main>