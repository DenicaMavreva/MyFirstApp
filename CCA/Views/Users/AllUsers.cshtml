@model CCA.ViewModels.Users.AllUsersViewModel
@{
    ViewData["Title"] = "AllUsers";
}

<main class="mt-3 mb-5">
    <h1 class="text-center">All Users</h1>
    <hr class="hr-2 bg-dark" />
    <table class="table w-75 mx-auto table-hover">
        <thead>
            <tr class="row">
                <th class="col-md-1">#</th>
                <th class="col-md-4">Name</th>
                <th class="col-md-2">Email</th>
            </tr>
        </thead>
        <tbody>
            @for (int rowIndex = 0; rowIndex < Model.Users.Count; rowIndex++)
            {
                var currentUser = Model.Users.ToList()[rowIndex];

                <tr class="row">
                    <th class="col-md-1">@(rowIndex + 1)</th>
                    <td class="col-md-4">@currentUser.Username</td>
                    <td class="col-md-4">@currentUser.Email</td>
                </tr>
            }
        </tbody>

    </table>
</main>