@model CCAUser
@{
    ViewData["Title"] = "UserDetails";
}
<main class="mt-3 mb-5">
    <div class="card" style="width: 70rem;">
        <img src="~/images/Engaged-Users.jpg" height="400"/>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">FullName: @Model.FullName</li>
            <li class="list-group-item">Email: @Model.Email</li>
            <li class="list-group-item">Actions:</li>
        </ul>
        <div class="card-body">
            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="Users" asp-action="DeleteUser" asp-route-id="@Model.Id" class="card-link">Delete</a>
                <a asp-controller="Users" asp-action="AllUsers" asp-route-id="@Model.Id" class="card-link">All Users</a>
            }
            else
            {
                <a asp-controller="Users" asp-action="AllUsers" asp-route-id="@Model.Id" class="card-link">All Users</a>
            }
        </div>
    </div>
</main>