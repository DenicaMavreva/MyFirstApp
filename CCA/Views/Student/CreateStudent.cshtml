@model CCA.ViewModels.Students.StudentInputViewModel
@{
    ViewData["Title"] = "CreateStudent";
}

<main class="mt-3 mb-5">
    <h1 class="text-center">Add Student</h1>
    <hr class="hr-2 bg-dark" />
    <form class="mx-auto half-width" method="post" asp-controller="Student" asp-action="CreateStudent">
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" placeholder="FullName...">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Faculty"></label>
            <input asp-for="Faculty" class="form-control" placeholder="Faculty...">
            <span asp-validation-for="Faculty" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EnrollmentDate"></label>
            <input asp-for="EnrollmentDate" class="form-control" placeholder="EnrollmentDate...">
            <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Email...">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <hr class="hr-2 bg-dark half-width mt-4" />
        <div class="button-holder mt-2 d-flex justify-content-center">
            <button type="submit" class="btn chushka-bg-color" asp-controller="Student" asp-action="CreateStudent">Add</button>
        </div>
    </form>
</main>