@model CCA.ViewModels.Students.StudentInputViewModel
@{
    ViewData["Title"] = "DeleteStudent";
}

<h2>Delete Student</h2>

<main class="mt-3 mb-5">
    <h1 class="text-center">Delete Student</h1>
    <hr class="hr-2 bg-dark" />
    <form class="mx-auto half-width" method="post" asp-controller="Student" asp-action="DeleteStudent">
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" placeholder="FullName..." value="@Model.FullName" disabled>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Faculty"></label>
            <input asp-for="Faculty" class="form-control" placeholder="Faculty..." value="@Model.Faculty" disabled>
            <span asp-validation-for="Faculty" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EnrollmentDate"></label>
            <textarea asp-for="EnrollmentDate" class="form-control" rows="4" placeholder="EnrollmentDate..." value="@Model.EnrollmentDate" disabled></textarea>
            <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <textarea asp-for="Email" class="form-control" rows="4" placeholder="Email..." value="@Model.Email" disabled></textarea>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <hr class="hr-2 bg-dark half-width mt-4" />

        <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
            <button type="submit" class="btn chushka-bg-color" asp-controller="Student" asp-action="DoDeleteStudent">Delete</button>
            <button asp-controller="Home" asp-action="Index" type="submit" class="btn chushka-bg-color">Cancel</button>

        </div>
    </form>
</main>