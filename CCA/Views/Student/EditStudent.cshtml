@model CCA.ViewModels.Students.StudentInputViewModel
@{
    ViewData["Title"] = "EditStudent";
}
<main class="mt-3 mb-5">
    <h1 class="text-center">Edit Student</h1>
    <hr class="hr-2 bg-dark" />
    <form class="mx-auto half-width" method="post" asp-controller="Student" asp-action="EditStudent">
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" placeholder="FullName..." value="@Model.FullName">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Faculty"></label>
            <input asp-for="Faculty" class="form-control" placeholder="Faculty..." value="@Model.Faculty">
            <span asp-validation-for="Faculty" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EnrollmentDate"></label>
            <textarea asp-for="EnrollmentDate" class="form-control" rows="4" placeholder="EnrollmentDate...">@Model.EnrollmentDate</textarea>
            <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <textarea asp-for="Email" class="form-control" rows="4" placeholder="Email...">@Model.Email</textarea>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
            <button type="submit" class="btn chushka-bg-color" asp-controller="Professors" asp-action="EditProfessor">Edit</button>
            <button asp-controller="Student" asp-action="AllStudents" type="submit" class="btn chushka-bg-color">Cancel</button>
        </div>
    </form>
</main>