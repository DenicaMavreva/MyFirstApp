@model Student
@{
    ViewData["Title"] = "DetailsStudent";
}

<main class="mt-3 mb-5">

    <div class="card" style="width: 70rem;">
        <div class="card-body">
            <h5 class="font-weight-bold mb-3">@Model.FullName</h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Faculty: @Model.Faculty</li>
                <li class="list-group-item">Enrollment Date: @Model.EnrollmentDate</li>
                <li class="list-group-item">Email: @Model.Email</li>
                <li class="list-group-item">Actions:</li>
            </ul>
            <div class="card-body">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Student" asp-action="EditStudent" asp-route-id="@Model.Id" class="card-link">Edit</a>
                    <a asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@Model.Id" class="card-link">Delete</a>
                    <a asp-controller="Student" asp-action="AllStudents" asp-route-id="@Model.Id" class="card-link">All Students</a>

                }
                else
                {
                    <a asp-controller="Student" asp-action="AllStudents" asp-route-id="@Model.Id" class="card-link">All Students</a>

                }
            </div>
        </div>
    </div>
</main>